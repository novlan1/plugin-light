{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@plugin-light/shared": [
        "packages/plugin-light-shared"
      ],
      "@plugin-light/shared-vue2": [
        "packages/plugin-light-shared-vue2"
      ],
      "@plugin-light/webpack-plugin-dispatch-vue": [
        "packages/webpack-plugin-dispatch-vue"
      ],
      "@plugin-light/webpack-plugin-gen-version": [
        "packages/webpack-plugin-gen-version"
      ],
      "@plugin-light/webpack-plugin-rem-to-rpx": [
        "packages/webpack-plugin-rem-to-rpx"
      ],
      "@plugin-light/webpack-plugin-add-common-vendor": [
        "packages/webpack-plugin-add-common-vendor"
      ],
      "@plugin-light/webpack-loader-ifdef": [
        "packages/webpack-loader-ifdef"
      ],
      "@plugin-light/webpack-loader-v-lazy": [
        "packages/webpack-loader-v-lazy"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "jsx": "preserve",
  },
  "include": [
    "./**/*",
    "types"
  ],
  "exclude": [
    "node_modules",
    "lib/"
  ]
}